<?xml version="1.0"?>

<library>
	<!-- Animations -->
	<animations>
		<animation>
			<tileset>
				<src>tools.png</src>
				<tile_dimensions width="128" height="128"/>
				<collision_rects>
					<!-- Hand collision rects -->
					<collision_rect tiles="0" x="14" y="28" width="36" height="31" />
					<collision_rect tiles="0" x="7" y="16" width="27" height="12" />

					<!-- Extinguisher (On) -->
					<collision_rect tiles="10-29" x="10" y="17" width="49" height="50" />

					<!-- Lighter (On) -->
					<collision_rect tiles="35-64" x="32" y="12" width="29" height="39" />

					<!-- Gavel -->
					<collision_rect tiles="65" x="24" y="2" width="36" height="55" />
				</collision_rects>
			</tileset>
			<animation_states>
				<!-- Hand (Off) -->
				<animation_state firstFrame="0" lastFrame="0" backFrame="0" />
				<!-- Hand (On) -->
				<animation_state firstFrame="0" lastFrame="0" backFrame="0" />

				<!-- Extinguisher (Off) -->
				<animation_state firstFrame="9" lastFrame="9" backFrame="9" />
				<!-- Extinguisher (On) -->
				<animation_state firstFrame="10" lastFrame="29" backFrame="10" />

				<!-- Lighter (Off) -->
				<animation_state firstFrame="34" lastFrame="34" backFrame="34" />
				<!-- Ligter (On) -->
				<animation_state firstFrame="35" lastFrame="64" backFrame="35" />

				<!-- Gavel (Off) -->
				<animation_state firstFrame="65" lastFrame="65" backFrame="65" />
				<!-- Gavel (On) -->
				<animation_state firstFrame="66" lastFrame="66" backFrame="66" />

			</animation_states>
		</animation>
	</animations>
</library>

