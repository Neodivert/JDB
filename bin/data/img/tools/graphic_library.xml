<?xml version="1.0"?>

<library>
	<!-- Animations -->
	<animations>
		<animation>
			<tileset>
				<src>tools.png</src>
				<tile_dimensions width="128" height="128"/>
				<collision_rects>
					<!-- Hand collision rects -->
					<collision_rect tiles="0" x="19" y="4" width="34" height="60" />
					<collision_rect tiles="0" x="9" y="37" width="10" height="16" />

					<!-- Extinguisher (On/off) -->
					<collision_rect tiles="9-29" x="10" y="17" width="49" height="50" />

					<!-- Lighter (On/off) -->
					<collision_rect tiles="30-64" x="32" y="12" width="29" height="39" />

					<!-- Gavel -->
					<collision_rect tiles="65" x="24" y="2" width="36" height="55" />
				</collision_rects>
			</tileset>
			<animation_states>
				<!-- Hand (Off) -->
				<animation_state firstFrame="0" lastFrame="0" backFrame="0" />
				<!-- Hand (On) -->
				<animation_state firstFrame="1" lastFrame="1" backFrame="1" />

				<!-- Extinguisher (Off) -->
				<animation_state firstFrame="9" lastFrame="9" backFrame="9" />
				<!-- Extinguisher (On) -->
				<animation_state firstFrame="10" lastFrame="29" backFrame="10" />

				<!-- Lighter (Off) -->
				<animation_state firstFrame="34" lastFrame="34" backFrame="34" />
				<!-- Ligter (On) -->
				<animation_state firstFrame="35" lastFrame="64" backFrame="35" />

				<!-- Gavel (Off) -->
				<animation_state firstFrame="65" lastFrame="65" backFrame="65" />
				<!-- Gavel (On) -->
				<animation_state firstFrame="66" lastFrame="66" backFrame="66" />

			</animation_states>
		</animation>
	</animations>
</library>

