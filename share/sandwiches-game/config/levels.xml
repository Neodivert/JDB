<?xml version="1.0"?>

<levels>
	<!-- Campaign levels -->
    <campaign_levels>
		<!-- Campaign level 01 -->
		<campaign_level>
            <level_book>
                <page>Welcome to "The Sandwiches Game"!</page>
                <page>Your goal is to remove dangers from some sandwiches before they get to the giant grinder and damage your friend</page>
                <page>In order to remove dangers from sandwiches, you have to combine multiple tools and use them on the dangers</page>
                <page>Press A, S, D or F to change current tool. Move the mouse and left click to use the tool</page>
                <page>That's it! Let's see which dangers you'll have to face on this level...</page>
            </level_book>
			<speed initial="5.0" step="0.5" time_lapse="20" />
            <dangers number="80">
                <danger ratio="1" present_to_player="true">fire</danger>
                <danger ratio="1" present_to_player="true">ice_crystals</danger>
                <danger ratio="1" present_to_player="true">rat</danger>
                <danger ratio="1" present_to_player="true">knife</danger>
            </dangers>
		</campaign_level>

		<!-- Campaign level 02 -->
		<campaign_level>
			<speed initial="6.0" step="0.5" time_lapse="10" />
            <dangers number="100">
                <danger ratio="1">fire</danger>
                <danger ratio="1">ice_crystals</danger>
                <danger ratio="1">rat</danger>
                <danger ratio="1">knife</danger>
                <danger ratio="2" present_to_player="true">shell</danger>
                <danger ratio="2" present_to_player="true">coward_hypnotist_rat</danger>
            </dangers>
		</campaign_level>

		<!-- Campaign level 03 -->
		<campaign_level>
			<speed initial="6.5" step="0.5" time_lapse="10" />
            <dangers number="100">
                <danger ratio="1">fire</danger>
                <danger ratio="1">ice_crystals</danger>
                <danger ratio="1">rat</danger>
                <danger ratio="1">knife</danger>
                <danger ratio="1">shell</danger>
                <danger ratio="1">coward_hypnotist_rat</danger>
                <danger ratio="1.25" present_to_player="true">enigma_bomb</danger>
                <danger ratio="0.5" present_to_player="true">medic_kit</danger>
                <danger ratio="2" present_to_player="true">tesla_coils</danger>
            </dangers>
		</campaign_level>


        <!-- Campaign level 04 -->
		<campaign_level>
			<speed initial="6.5" step="0.5" time_lapse="10" />
            <dangers number="100">
                <danger ratio="1">fire</danger>
                <danger ratio="1">ice_crystals</danger>
                <danger ratio="1">rat</danger>
                <danger ratio="1">knife</danger>
                <danger ratio="1">shell</danger>
                <danger ratio="1">coward_hypnotist_rat</danger>
                <danger ratio="1">enigma_bomb</danger>
                <danger ratio="0.5">medic_kit</danger>
                <danger ratio="1">tesla_coils</danger>
                <danger ratio="2" present_to_player="true">petards</danger>
                <danger ratio="2" present_to_player="true">broken_bottle</danger>
            </dangers>
		</campaign_level>
	</campaign_levels>


	<!-- Survival levels -->
	<survival_levels>
		<!-- Default survival level -->
		<survival_level>
            <speed initial="5.0" step="0.5" time_lapse="10" />
            <level_book>
                <page>Welcome to the survival mode of "The Sandwiches Game"! In this mode you will face all the dangers available in the game, so we recommend you to play the campaign mode first if you haven't done so.</page>
            </level_book>
            <dangers number="99999">
                <danger ratio="1">fire</danger>
                <danger ratio="1">ice_crystals</danger>
                <danger ratio="1">rat</danger>
                <danger ratio="1">knife</danger>
                <danger ratio="1">shell</danger>
                <danger ratio="1">coward_hypnotist_rat</danger>
                <danger ratio="1">enigma_bomb</danger>
                <danger ratio="1">medic_kit</danger>
                <danger ratio="1">tesla_coils</danger>
            </dangers>
		</survival_level>
	</survival_levels>
</levels>
